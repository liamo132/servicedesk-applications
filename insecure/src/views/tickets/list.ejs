<%- include("../layout", { body: `
<h2>My Tickets</h2>

<form method="GET" action="/tickets">
    <input 
        type="text" 
        name="search" 
        placeholder="Search by title (SQLi vulnerable)" 
        value="${search || ''}"
    >
    <button type="submit">Search</button>
</form>

<p><a href="/tickets/new">Create New Ticket</a></p>

<table border="1" cellpadding="5">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Status</th>
        <th>Created</th>
    </tr>

    ${tickets.map(t => `
        <tr>
            <td>${t.id}</td>
            <td><a href="/tickets/${t.id}">${t.title}</a></td>
            <td>${t.status}</td>
            <td>${t.created_at}</td>
        </tr>
    `).join('')}
</table>
` }) %>
